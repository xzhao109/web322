<div class="row">
  <div class="col-md-12">
    <br />
    {{#each course}}
      <h2>{{courseDescription}}</h2>
      <hr />

      <form method="post" action="/course/update">
        <input type="hidden" name="courseId" value="{{courseId}}" />
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <label for="courseCode">Course Code</label>
              <input
                class="form-control"
                name="courseCode"
                type="text"
                value="{{courseCode}}"
              />
            </div>
          </div>
          <div class="col-md-9">
            <div class="form-group">
              <label for="courseDescription">Course Description</label>
              <input
                class="form-control"
                name="courseDescription"
                type="text"
                value="{{courseDescription}}"
              />
            </div>
          </div>
        </div>
        <hr />

        <input
          type="submit"
          class="btn btn-primary float-right"
          value="Update Course"
        /><br /><br /><br />
      </form>
    {{/each}}
  </div>
</div>