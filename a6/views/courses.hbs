<div class="row">
  <div class="col-md-12">
    <br />
    <h2>Courses<a href="/courses/add" class="btn btn-success float-right">Add
        New Course</a></h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Course Code</th>
            <th>Course Description</th>
          </tr>
        </thead>
        <tbody>
          {{#each courses}}
            <tr>
              <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
              <td><a
                  href="/students?course={{courseId}}"
                >{{courseDescription}}</a></td>
              <td><a
                  class="btn btn-danger"
                  href="/course/delete/{{this.courseId}}"
                >remove</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
  {{#unless courses}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>